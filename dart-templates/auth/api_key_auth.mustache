import 'dart:async';
import 'package:{{pubName}}/auth/auth.dart';
import 'package:dio/dio.dart';

class ApiKeyAuthInterceptor extends AuthInterceptor {
    Map<String, String> apiKeys = {};

    @override
    Future<dynamic> onRequest(RequestOptions options) {
        final List<Map<String, dynamic>> authInfo = getAuthInfo(options, 'apiKey');
        for (final info in authInfo) {
            final String authName = info['name'];
            final String authKeyName = info['keyName'];
            final String authWhere = info['where'];
            final apiKey = apiKeys[authName];

            if (apiKey == null) {
                continue;
            }

            final where = authWhere == 'query' ?  options.queryParameters : options.headers;
            where[authKeyName] = apiKey;
            break;
        }

        return super.onRequest(options);
    }
}
